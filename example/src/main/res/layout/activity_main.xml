<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:layout_margin="4dp"/>

    <Button
        android:id="@+id/check_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Login" />

    <Button
        android:id="@+id/signup_by_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup By Username" />

    <Button
        android:id="@+id/signup_by_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup By Email" />

    <Button
        android:id="@+id/request_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Code for Phone Number" />

    <Button
        android:id="@+id/login_by_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In By Phone Number" />

    <Button
        android:id="@+id/login_by_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In By Username" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out" />

</LinearLayout>